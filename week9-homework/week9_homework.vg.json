{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Agricultural Gross Domestic Product Impact by Country (2023)",
    "width": 800,
    "height": 400,
    "data": {
        "url": "ne_110m_admin_0_countries.topojson",
        "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
        }
    },
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 0.5
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "cleaned_gdp_agriculture.csv"
                        },
                        "key": "Country/Economy",
                        "fields": [
                            "Agricultural (%)",
                            "Agricultural (USD$)"
                        ]
                    }
                }
            ],
            "encoding": {
                "color": {
                    "field": "Agricultural (%)",
                    "type": "quantitative",
                    "scale": {
                        "type": "linear",
                        "domain": [
                            0,
                            20
                        ],
                        "range": [
                            "#ffeda0",
                            "#f03b20"
                        ]
                    },
                    "legend": {
                        "title": "Agricultural Contribution (%)"
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Agricultural (%)",
                        "type": "quantitative",
                        "title": "Agricultural Contribution (%)",
                        "format": ".2f"
                    },
                    {
                        "field": "Agricultural (USD$)",
                        "type": "quantitative",
                        "title": "Agricultural Gross Domestic Product (USD$)",
                        "format": ".2f"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightblue"
            }
        },
        {
            "data": {
                "url": "WorldMapWithGraticules.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        }
    ]
}